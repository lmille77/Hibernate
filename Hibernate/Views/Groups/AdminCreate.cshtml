@model Hibernate.Models.Group

@{
    ViewData["Title"] = "Create a Group";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Create a Group</h2>
<br />
<div id="centerform0">
    <br />
    <br />
    <form method="post" asp-action="AdminCreate" asp-controller="Groups">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-lg-12">
                <input asp-for="Name" class="form-control" placeholder="Group Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

        </div>
        <br />
        <div class="form-group row">
            <div class="col-lg-12">
                <input asp-for="Address" class="form-control" placeholder="Street Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

        </div>
        <br />
        <div class="form-group row">
            <div class="col-lg-6">
                <input asp-for="City" class="form-control" placeholder="City" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <input asp-for="State" class="form-control" placeholder="State" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-lg-10">
                <select asp-for="AssignId" asp-items="@ViewBag.Users" class="form-control">
                    <option disabled selected>--Select a Sales Rep--</option>
                </select>
            </div>

        </div>
        <br />

        <div class="form-group">
            <div class="text-center">
                <input type="submit" value="Create Group" class=" btn btn-success" />
            </div>
        </div>

    </form>
    <div class="text-center">
        <a asp-action="AdminIndex">Back to List</a>
    </div>
    <br />
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
