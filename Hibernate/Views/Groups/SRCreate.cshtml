@model Hibernate.Models.Group

@{
    ViewData["Title"] = "Create a Group";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Create a Group</h2>
<br />

<div class="sidebar-container border-info">
    <div>
        <br />
        <div class="text-center">Quick Actions</div>
        <br />
    </div>

    <ul class="sidebar-navigation">
        <li>
            <a asp-controller="SalesRep" asp-action="Index" class="btn btn-dark btn-outline-info">Dashboard</a>
        </li>
        <li>
            <a asp-controller="Groups" asp-action="SRIndex" class="btn btn-info btn-outline-light">Groups List</a>
        </li>
    </ul>
</div>


<div id="centerform0">
    <br />
    <br />
    <form method="post" asp-action="SRCreate" asp-controller="Groups">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-lg-12">
                <input asp-for="Name" class="form-control" placeholder="Group Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

        </div>
        <br />
        <div class="form-group row">
            <div class="col-lg-12">
                <input asp-for="Address" class="form-control" placeholder="Street Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

        </div>
        <br />
        <div class="form-group row">
            <div class="col-lg-6">
                <input asp-for="City" class="form-control" placeholder="City" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <input asp-for="State" class="form-control" placeholder="State" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>

        <br />

        <div class="form-group">
            <div class="text-center">
                <input type="submit" value="Create Group" class=" btn btn-success" />
            </div>
        </div>

    </form>
    <br />
    <div class="text-center">
        <a asp-action="SRIndex">Back to List</a>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

