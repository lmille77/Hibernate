@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2 class="text-center">Role List</h2>

<div class="sidebar-container border-info">
    <div>
        <br />
        <div class="text-center">Quick Actions</div>
        <br />
    </div>

    <ul class="sidebar-navigation">
       
        <li>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-dark btn-outline-info">
                Dashboard
            </a>
        </li>
        <li>
            <a asp-controller="Unapprovedusers" asp-action="Index" class="btn btn-dark btn-outline-info">
                Pending Approval
            </a>
        </li>
        <li>
            <a asp-controller="User" asp-action="Index" class="btn btn-dark btn-outline-info">Users List</a>
        </li>
        <li>
            <a asp-controller="Groups" asp-action="AdminIndex" class="btn btn-dark btn-outline-info">Groups List</a>
        </li>
        <li>
            <a a asp-controller="Roles" asp-action="Index" class="btn btn-info btn-outline-light">Roles List</a>
        </li>
       
    </ul>
</div>

<div class="p-4 border w-50 mx-auto">
    <table class="table table-striped border">
        <tr class="table-secondary">


            <th>
                Name
            </th>
            <th class="text-center">
                Actions
            </th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    <div class="text-center">
                        <form asp-action="Delete" asp-route-id="@item.Id">
                            <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-info text-white" style="cursor:pointer">
                                Edit
                            </a>

                            <button type="submit" onclick="return confirm('Are you sure you want to delete this?')"
                                    class="btn btn-danger">
                                Delete
                            </button>
                        </form>
                    </div>

                </td>
            </tr>
        }
    </table>
        
    
</div>
<br />
<div class="text-center">
    <a asp-action="Upsert" asp-controller="Roles" class="btn btn-primary">
        <i class="fa fa-plus" aria-hidden="true"></i>
        Create New Role
    </a>
</div>


