@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
<br />
<h2 class="text-center" style="margin-left:50px">Role List</h2>
<div class="text-center" style="margin-left:50px">
    <a asp-action="Upsert" asp-controller="Roles" class="btn btn-primary"> Create New Role</a>
</div>
<br />
<div class="sidebar-container border-info">
    <div>
        <br />
        <div class="text-center">Quick Actions</div>
        <br />
    </div>

    <ul class="sidebar-navigation">
        @*<li>
                <a asp-action="Send" class="btn btn-dark btn-outline-info">Send Message </a>
            </li>*@
        <li>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-dark btn-outline-info">
                Dashboard
            </a>
        </li>
        <li>
            <a asp-controller="Unapprovedusers" asp-action="Index" class="btn btn-dark btn-outline-info">
                Pending Approval
            </a>
        </li>
        <li>
            <a asp-controller="User" asp-action="Index" class="btn btn-dark btn-outline-info">Users List</a>
        </li>
        <li>
            <a asp-controller="Groups" asp-action="AdminIndex" class="btn btn-dark btn-outline-info">Groups List</a>
        </li>
        <li>
            <a a asp-controller="Roles" asp-action="Index" class="btn btn-info btn-outline-light">Roles List</a>
        </li>
        @*<li>
                <a asp-controller="expiredpass" asp-action="Index" class="btn btn-dark btn-outline-info">Expired Passwords List</a>
            </li>*@
    </ul>
</div>

<div class="p-4 border rounded" style="width: 900px; margin-left:175px;">
    @if (Model.Any())
    {
        <table class="table table-striped border">
            <tr class="table-secondary">

                <th>
                    ID
                </th>
                <th>
                    Name
                </th>

                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        <div class="text-center">
                            <form asp-action="Delete" asp-route-id="@item.Id">
                                <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-info text-white" style="cursor:pointer">
                                    Edit
                                </a>

                                <button type="submit" onclick="return confirm('Are you sure you want to delete this?')"
                                        class="btn btn-danger">
                                    Delete
                                </button>
                            </form>
                        </div>

                    </td>
                </tr>
            }
        </table>
    }
</div>
<br />


