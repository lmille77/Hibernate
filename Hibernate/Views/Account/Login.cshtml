@model Hibernate.Models.ViewModels.LoginViewModel


<h4 class="text-center">Hibernate Funds</h4>
<center><img src="~/frontend/hibernate_img.jpg" alt=”Image” style="width:200px; height:200px"></center>


<div class="text-center">
    <h6>Sign in with your email and password</h6>
</div>



<div class="row">

</div>


<div class="row col-md-6 mx-auto">
    <div class="col-md-8 offset-md-2">
        <section id="loginform">
            <form id="account" method="post" asp-action="Login" asp-controller="Account">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="input-group">                    
                    <input asp-for="Email" placeholder="Email" type="text" class="form-control" aria-label="Username" aria-describedby="addon-wrapping" />
                </div>

                <br />

                <div class="input-group">                    
                    <input asp-for="Password" placeholder="Password" class="form-control" aria-label="Username" aria-describedby="addon-wrapping" />
                </div>

                <br />
                <br />

                <div class="form-group">
                    <div class=" col-md-10 offset-md-2">
                        <input type="submit" value="Login" class=" btn btn-success" />
                    </div>
                </div>

                <p class="col-md-10 offset-md-2">
                    <a asp-action="Register">Become a Participant</a>
                </p>
                <p class="col-md-10 offset-md-2">
                    <a asp-action="ResetPassword">Forgot Password</a>
                </p>

            </form>
        </section>
    </div>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}