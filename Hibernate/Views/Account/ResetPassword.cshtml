@model Hibernate.Models.ViewModels.Message

<h2 class="text-center">Forgot Password</h2>
<hr class="col-lg-4"/>

<form id="resetpw" method="post" asp-action="ResetPassword" asp-controller="Account">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group text-center">
        <label asp-for="ToEmail">Please enter your email:</label>
        <div class="col-lg-4 mx-auto">
            <input asp-for="ToEmail" class="form-control" />
            <span asp-validation-for="ToEmail" class="text-danger"></span>
        </div>
        <br />
        <input type="submit" value="Reset" class=" btn btn-success" />
    </div>
</form>


