@model Hibernate.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Create a Participant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Create a Participant</h2>
<br />
<div id="centerform0">
    <br />
    <form method="post" asp-action="CreateParticipant" asp-controller="User">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-lg-6">
                <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</div>
            <div class="col-lg-12">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</div>
            <div class="col-lg-12">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</div>
            <div class="col-lg-12">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</div>
            <div class="col-lg-12">
                <select asp-for="GroupSelected" asp-items="@ViewBag.Users" class="form-control">
                    <option disabled selected>--Select a Group--</option>
                </select>
            </div>
        </div>
        <br />
        <div class="text-center">
            <input type="submit" value="Create Participant" class=" btn btn-success" />
        </div>
    </form>
    <br />
    <div class="text-center">
        <a asp-action="Index">Back to List</a>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

