@model Hibernate.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Create a Group Leader";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Create a Group Leader</h2>
<br />
@if (User.IsInRole("Admin"))
{
    <div class="sidebar-container border-info">
        <div>
            <br />
            <div class="text-center">Quick Actions</div>
            <br />
        </div>

        <ul class="sidebar-navigation">

            <li>
                <a asp-controller="Admin" asp-action="Index" class="btn btn-dark btn-outline-info">
                    Dashboard
                </a>
            </li>
            <li>
                <a asp-controller="Unapprovedusers" asp-action="Index" class="btn btn-dark btn-outline-info">
                    Pending Approval
                </a>
            </li>
            <li>
                <a asp-controller="User" asp-action="Index" class="btn btn-info btn-outline-light">Users List</a>
            </li>
            <li>
                <a asp-controller="Groups" asp-action="AdminIndex" class="btn btn-dark btn-outline-info">Groups List</a>
            </li>
            <li>
                <a a asp-controller="Roles" asp-action="Index" class="btn btn-dark btn-outline-info">Roles List</a>
            </li>
        </ul>


    </div>
}
@if (User.IsInRole("Sales Rep"))
{
    <div class="sidebar-container border-info">
        <div>
            <br />
            <div class="text-center">Quick Actions</div>
            <br />
        </div>

        <ul class="sidebar-navigation">
            <li>
                <a asp-controller="SalesRep" asp-action="Index" class="btn btn-dark btn-outline-info">Dashboard</a>
            </li>
            <li>
                <a asp-controller="Groups" asp-action="SRIndex" class="btn btn-info btn-outline-light">Groups List</a>
            </li>
        </ul>
    </div>
}
<div id="centerform0">
    <br />
    <form method="post" asp-action="CreateGL" asp-controller="User">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-lg-6">
                <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-lg-6">
                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</div>
            <div class="col-lg-12">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</div>
            <div class="col-lg-12">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</div>
            <div class="col-lg-12">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</div>
            <div class="col-lg-12">
                <select asp-for="GroupSelected" asp-items="@ViewBag.Users" class="form-control">
                    <option disabled selected>--Select a Group--</option>
                </select>
            </div>
        </div>
        <br />
        <div class="text-center">
            <input type="submit" value="Create Group Leader" class=" btn btn-success" />
        </div>
    </form>
    <br />
    @if (User.IsInRole("Admin"))
    {
        <div class="text-center">
            <a asp-action="Index">Back to List</a>
        </div>
    }
    else
    {
        <div class="text-center">
            <a asp-action="SRIndex" asp-controller="Groups">Back to List</a>
        </div>
    }

</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

